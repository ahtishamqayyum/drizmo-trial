  console.log('  - user1@tenanta.com / password123');
  console.log('  - user2@tenanta.com / password123');
  console.log('Tenant B:');
  console.log('  - user1@tenantb.com / password123');
  console.log('  - user2@tenantb.com / password123');
  console.log('\nâœ¨ Seed completed successfully!');
}

main()
  .catch((e) => {
    console.error('âŒ Seed failed:', e);
    process.exit(1);
  })
  .finally(async () => {
    await prisma.$disconnect();
  });

