import { PrismaClient } from '@prisma/client';
import * as bcrypt from 'bcrypt';

const prisma = new PrismaClient();

async function main() {
  console.log('ðŸŒ± Starting seed...');

  // Create Tenant A
  const tenantA = await prisma.tenant.upsert({
    where: { id: 'tenant-a-id' },
    update: {},
    create: {
      id: 'tenant-a-id',
      name: 'Tenant A',
    },
  });
  console.log('âœ… Created Tenant A:', tenantA);

  // Create Tenant B
  const tenantB = await prisma.tenant.upsert({
    where: { id: 'tenant-b-id' },
    update: {},
    create: {
      id: 'tenant-b-id',
      name: 'Tenant B',
    },
  });
  console.log('âœ… Created Tenant B:', tenantB);

  // Create test users for Tenant A
  const hashedPasswordA = await bcrypt.hash('password123', 10);
  const userA1 = await prisma.user.upsert({
    where: { email: 'user1@tenanta.com' },
    update: {},
    create: {
      email: 'user1@tenanta.com',
      password: hashedPasswordA,
      tenantId: tenantA.id,
    },
  });
  console.log('âœ… Created User 1 for Tenant A:', userA1.email);

  const userA2 = await prisma.user.upsert({
    where: { email: 'user2@tenanta.com' },
    update: {},
    create: {
      email: 'user2@tenanta.com',
      password: hashedPasswordA,
      tenantId: tenantA.id,
    },
  });
  console.log('âœ… Created User 2 for Tenant A:', userA2.email);

  // Create test users for Tenant B
  const hashedPasswordB = await bcrypt.hash('password123', 10);
  const userB1 = await prisma.user.upsert({
    where: { email: 'user1@tenantb.com' },
    update: {},
    create: {
      email: 'user1@tenantb.com',
      password: hashedPasswordB,
      tenantId: tenantB.id,
    },
  });
  console.log('âœ… Created User 1 for Tenant B:', userB1.email);

  const userB2 = await prisma.user.upsert({
    where: { email: 'user2@tenantb.com' },
    update: {},
    create: {
      email: 'user2@tenantb.com',
      password: hashedPasswordB,
      tenantId: tenantB.id,
